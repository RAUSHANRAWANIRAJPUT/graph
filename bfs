#include <bits/stdc++.h>
using namespace std;

void BFS(int root, vector<vector<int>>& adjMatrix, vector<bool>& visited) {
    queue<int> q;
    q.push(root);
    visited[root] = true;

    while (!q.empty()) {
        int node = q.front();
        q.pop();

        cout << node << " ";

        for (int i = 0; i < adjMatrix.size(); i++) {
            if (adjMatrix[node][i] == 1 && !visited[i]) {
                visited[i] = true;
                q.push(i);
            }
        }
    }
}

int main() {
    int V = 4;
    vector<pair<int,int>> connection = {
        {1,2},{1,3},{1,4},{1,0},{2,1},{2,3},{3,1},{3,2}
    };

    vector<vector<int>> adjMatrix(V+1, vector<int>(V+1, 0));

    for (auto &x : connection) {
        int u = x.first;
        int v = x.second;
        adjMatrix[u][v] = 1;
        adjMatrix[v][u] = 1;
    }

    vector<bool> visited(V+1, false);
    BFS(1, adjMatrix, visited);

    return 0;
}
